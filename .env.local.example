# Copy this file to .env.local and fill in your values
# This file contains the minimum required environment variables for local development

# MultiversX Configuration (Required)
NEXT_PUBLIC_MULTIVERSX_NETWORK=devnet
NEXT_PUBLIC_MULTIVERSX_API=https://devnet-api.multiversx.com
NEXT_PUBLIC_MULTIVERSX_GATEWAY=https://devnet-gateway.multiversx.com
NEXT_PUBLIC_MULTIVERSX_EXPLORER=https://devnet-explorer.multiversx.com
NEXT_PUBLIC_MULTIVERSX_CHAIN_ID=D

# Game Configuration (Required)
NEXT_PUBLIC_GAME_VERSION=0.1.0
NEXT_PUBLIC_COSMIC_TOKEN_SYMBOL=COSMIC
NEXT_PUBLIC_MAX_HEROES_PER_ACCOUNT=10
NEXT_PUBLIC_BATTLE_TIMEOUT_MS=30000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Basic Development Setup (Required)
NODE_ENV=development
PORT=3000

# AI APIs (Optional - for AI features)
# GOOGLE_AI_API_KEY=your_google_ai_studio_api_key_here
# HUGGING_FACE_API_KEY=your_huggingface_api_key_here

# Database (Optional - for persistent data)
# UPSTASH_REDIS_URL=your_upstash_redis_url_here
# UPSTASH_REDIS_TOKEN=your_upstash_redis_token_here

# Storage (Optional - for NFT assets)
# IPFS_API_KEY=your_ipfs_api_key_here
# IPFS_API_SECRET=your_ipfs_api_secret_here
